{
  "info": {
    "name": "Securin Recipe API",
    "_postman_id": "securin-recipes-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Recipes",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/recipes?page=1&limit=10",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "recipes"
          ],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Search Recipes",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/recipes/search?title=pie&rating=>=4.5",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "recipes",
            "search"
          ],
          "query": [
            {
              "key": "title",
              "value": "pie"
            },
            {
              "key": "rating",
              "value": ">=4.5"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4001"
    }
  ]
}